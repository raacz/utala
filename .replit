run = "bundle exec jekyll serve -H 0.0.0.0 "
hidden = [".bundle"]

entrypoint = "main.rb"
onBoot = "chmod go-w /tmp"

[packager]
language = "ruby"

[packager.features]
packageSearch = true
guessImports = true

[languages.ruby]
pattern = "**/*.rb"

[languages.ruby.languageServer]
start = ["solargraph", "stdio"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "README.md"]
